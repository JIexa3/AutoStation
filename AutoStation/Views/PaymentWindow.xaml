<Window x:Class="AutoStation.Views.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Оплата картой" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Оплата заправки"
                 Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                 Margin="0,0,0,24"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Информация о заказе:"
                     Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                     Margin="0,0,0,8"/>
            <TextBlock x:Name="FuelTypeText"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBlock x:Name="VolumeText"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"/>
            <TextBlock x:Name="TotalAmountText"
                     Style="{StaticResource MaterialDesignBody1TextBlock}"
                     FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,16">
            <TextBlock Text="Данные карты:"
                     Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                     Margin="0,0,0,8"/>
            
            <TextBox x:Name="CardNumberTextBox"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}"
                    materialDesign:HintAssist.Hint="Номер карты"
                    MaxLength="19"
                    PreviewTextInput="CardNumberTextBox_PreviewTextInput"
                    PreviewKeyDown="TextBox_PreviewKeyDown"
                    Margin="0,0,0,8"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox x:Name="ExpiryDateTextBox"
                        Grid.Column="0"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        materialDesign:HintAssist.Hint="ММ/ГГ"
                        MaxLength="5"
                        PreviewTextInput="ExpiryDateTextBox_PreviewTextInput"
                        PreviewKeyDown="TextBox_PreviewKeyDown"
                        Margin="0,0,4,0"/>

                <PasswordBox x:Name="CvvPasswordBox"
                           Grid.Column="1"
                           Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                           materialDesign:HintAssist.Hint="CVV"
                           MaxLength="3"
                           PreviewTextInput="CvvPasswordBox_PreviewTextInput"
                           PreviewKeyDown="TextBox_PreviewKeyDown"
                           Margin="4,0,0,0"/>
            </Grid>
        </StackPanel>

        <Button Grid.Row="4"
                Content="Оплатить"
                Click="PayButton_Click"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="{DynamicResource PrimaryHueDarkBrush}"
                BorderBrush="{DynamicResource PrimaryHueDarkBrush}"
                Foreground="White"
                materialDesign:ButtonAssist.CornerRadius="8"
                Height="45"/>
    </Grid>
</Window>
