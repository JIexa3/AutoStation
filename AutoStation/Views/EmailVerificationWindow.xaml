<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="AutoStation.Views.EmailVerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:controls="clr-namespace:AutoStation.Controls"
        mc:Ignorable="d"
        Title="Подтверждение Email" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Логотип -->
        <controls:LogoControl Grid.Row="0" 
                            Width="100" Height="100"
                            Margin="0,20,0,20"/>

        <!-- Форма подтверждения -->
        <StackPanel Grid.Row="1" 
                    Width="300"
                    VerticalAlignment="Top">
            <TextBlock Text="Подтверждение Email" 
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="0,0,0,32"
                       TextAlignment="Center"/>

            <TextBlock Text="Мы отправили код подтверждения на ваш email."
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,16"/>

            <TextBox x:Name="VerificationCodeTextBox"
                     materialDesign:HintAssist.Hint="Код подтверждения"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Margin="0,8"/>

            <Button Content="Подтвердить"
                    x:Name="VerifyButton"
                    Click="VerifyButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,16,0,8"/>

            <Button Content="Отправить код повторно"
                    x:Name="ResendButton"
                    Click="ResendButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,8"/>

            <Button Content="Вернуться к входу"
                    x:Name="BackToLoginButton"
                    Click="BackToLoginButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0,8"/>
        </StackPanel>
    </Grid>
</Window>
